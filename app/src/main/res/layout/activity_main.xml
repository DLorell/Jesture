<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/deleteLast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="0.20"
            android:text="Delete Last"/>

        <ToggleButton
            android:id="@+id/testButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="0.20"
            android:textOff="Test"
            android:textOn="Stop Test" />


    </LinearLayout>

    <TextView
        android:id="@+id/xAccl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yAccl"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="15sp"/>

    <TextView
        android:id="@+id/zAccl"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="15sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Yaw"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="30sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Roll"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="15sp"/>

    <TextView
        android:id="@+id/Pitch"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="15sp" />

    <TextView
        android:id="@+id/numTraces"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="35sp"
        android:layout_marginBottom="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textOff="C"
            android:textOn="C"
            android:layout_weight="0.20"/>

        <ToggleButton
            android:id="@+id/slashright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textOff="SR"
            android:textOn="SR"
            android:layout_weight="0.20"/>

        <ToggleButton
            android:id="@+id/slashleft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textOff="SL"
            android:textOn="SL"
            android:layout_weight="0.20"/>

        <ToggleButton
            android:id="@+id/toggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"

            android:textOff="Record"
            android:textOn="Stop Recording"
            android:layout_weight="0.440"/>

    </LinearLayout>

    <ToggleButton
        android:id="@+id/transmit"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:textOff="Transmit?"
        android:textOn="Transmitting"/>


</LinearLayout>